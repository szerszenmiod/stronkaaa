<div class="header-wrapper">
  <header class="header glassmorphism" id="header">
    <div class="header__container container">
      <div class="header__logo">
        <a href="/" class="logo">
          <img src="{{ 'logo.png' | asset_url }}" alt="PremiumMC" width="180" height="48">
        </a>
      </div>
      
      <nav class="header__nav" id="nav">
        <ul class="nav-list">
          <li><a href="/" class="nav-link">Strona główna</a></li>
          <li><a href="/collections/rangi" class="nav-link active">Sklep</a></li>
          <li><a href="#jak-dziala" class="nav-link">Jak działa?</a></li>
          <li><a href="#faq" class="nav-link">FAQ</a></li>
          <li><a href="https://discord.gg/premiummc" class="nav-link discord-btn" target="_blank">Discord</a></li>
        </ul>
      </nav>
      
      <div class="header__cart">
        <cart-link class="cart-link">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M3 3h2l.4 2M7 13h10l3-9H6.4M7 13L5.2 15.2a1 1 0 0 0-.35-.38L4 13M9 19a2 2 0 1 0 4 0 2 2 0 0 0-4 0zM15 19a2 2 0 1 0 4 0 2 2 0 0 0-4 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span class="cart-count">{{ cart.item_count }}</span>
        </cart-link>
      </div>
      
      <button class="header__mobile-toggle" id="mobileToggle">
        <svg class="open" width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
        <svg class="close" width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
    </div>
  </header>
</div>

<style>
  .header-wrapper {
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(20px);
  }
  
  .header {
    background: rgba(15, 15, 25, 0.95);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .header.scrolled {
    background: rgba(10, 10, 20, 0.98);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }
</style>

<script>
  // Sticky header scroll effect
  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const header = document.getElementById('header');
    if (window.scrollY > 50) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }
  });
</script>
